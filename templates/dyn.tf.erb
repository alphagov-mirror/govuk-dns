variable "DYN_ZONE_ID" {
    description = "The zone to deploy DNS to"
}

<% records['records'].each do | record | %>
resource "dyn_record" "<%= record['resource_title'] %>" {
  zone = "${var.DYN_ZONE_ID}"
  name = "<%= record['subdomain'] %>"
  type = "<%= record['record_type'] %>"
  ttl = <%= record['ttl'] %>
  value = "<%= record['data'] %>"
}
<% end %>
